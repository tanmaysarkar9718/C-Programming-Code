                                               /*Addition of two numbers*/
#include <stdio.h>
float sum(float x,float y)
   {
    float sum=x+y;
    return sum;
   }
int main()
{
    float num1,num2,result;
    printf("Enter the first number:\n");
    scanf("%f",&num1);
    printf("Enter the second number:\n");
    scanf("%f",&num2);
    result=sum(num1,num2);
    printf("The summation is:%0.2f\n",result);
    return 0;
}
