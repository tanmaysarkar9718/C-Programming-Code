                                     /*summation of two numbers*/
#include <stdio.h>
int main()
{
    int a,b,*ptr1,*ptr2;
    printf("Enter the first number:-\n");
    scanf("%d",&a);
    printf("Enter the second number:-\n");
    scanf("%d",&b);
    ptr1=&a;
    ptr2=&b;
    int sum;
    sum=a+b;//Usual way to add two numbers
    printf("The summation is(Usual way):%d\n",sum);
    sum= *ptr1+*ptr2; //Pointer way to add two numbers
    printf("The summation is(Pointer way):%d\n",sum);
    return 0;
}
